{% extends 'ctsearch/base.html.twig' %}


{%block main_content%}
  {%if autopromotes is defined%}
    <ul class="actions">
      <li id="add-autopromote"><a href="{{ path('autopromote-add') }}">Add an autopromote</a></li>
    </ul>
    {%if autopromotes|length > 0%}
    <table>
      <thead>
        <tr>
          <th>{{'Title'|trans}}</th>
          <th>{{'Index'|trans}}</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        {%set class='even'%}
        {%for autopromote in autopromotes%}
          {%if class=='even'%}{%set class='odd'%}{%else%}{%set class='even'%}{%endif%}
          <tr class="{{class}}">
            <td>{{autopromote.title}}</td>
            <td>{{autopromote.index}}</td>
            <td class="actions">
              <ul>
                <li><a href="{{ path('autopromote-edit', {id: autopromote.id}) }}">{{'Edit'|trans}}</a></li>
                <li><a href="{{ path('autopromote-delete', {id: autopromote.id}) }}" class="autopromote-delete action-delete">{{'Delete'|trans}}</a></li>
              </ul>
            </td>
          </tr>
        {%endfor%}
      </tbody>
    </table>
    {%endif%}
  {%endif%}
  {%if form is defined%}
    {{form(form, {'attr': {'id': 'form_autopromote'}})}}
  {%endif%}
  <script type="text/javascript">
    __autopromote_ajax_get_analyzers_url = '{{path('autopromote-ajax-get-analyzers')}}';
  </script>
{%endblock%}